        SET
            STTS_CD = 'EDU_STTS_CD05'
        WHERE
            1=1
            AND STTS_CD = 'EDU_STTS_CD04'
            AND EPISD_SEQ IN (SELECT EPISD_SEQ FROM ED_EDCTN_EPISD_MST WHERE EDCTN_STRT_DTM <![CDATA[ < ]]> NOW());
